--
-- Drop table products if it exists
--
DROP TABLE IF EXISTS products;

--
-- Create table products
--
CREATE TABLE products (
  barcode VARCHAR(32) PRIMARY KEY NOT NULL,
  display_name VARCHAR(255) NOT NULL,
  manufacturer VARCHAR(255) NOT NULL
);


